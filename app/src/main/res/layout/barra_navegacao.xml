<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/activity_applist">

    <Button
        android:id="@+id/btSetaEsquerda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="setaEsquerda"
        android:background="@drawable/seta_esquerda"
        />
    
    <ImageView
        android:id="@+id/setaEsquerda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/seta_esquerda" />

    <Button
        android:id="@+id/btPaginaInicial"
        android:layout_width="148dp"
        android:layout_height="58dp"
        android:layout_weight="1"
        android:onClick="paginaInicial"
        android:background="@drawable/tela_inicial"
        />

    <ImageView
        android:id="@+id/paginaInicial"
        android:layout_width="148dp"
        android:layout_height="58dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/tela_inicial" />

    <Button
        android:id="@+id/btSetaDireita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/seta_direita"
        android:onClick="setaDireita"
        />

    <ImageView
        android:id="@+id/setaDireita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/seta_direita" />
</LinearLayout>
